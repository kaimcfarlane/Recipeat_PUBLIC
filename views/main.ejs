<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipeat</title>
    <link rel="stylesheet" href="main.css">
    <script defer src="server.js"></script>
    <script defer src="main.js"></script>
    <script defer src="ajax.js"></script>
</head>
    <body>
        <ul class="circles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
        <header id="mainHeader">
            <div class="headerElement" id="lHeaderIcon">
                <img id="rIconImg" alt="Recipeat Icon" src="Recipeat_Green_1-removebg-preview.png">
            </div>
            <h1 class="headerElement" id="headerTitle">RECIPEAT</h1>
            <div class="headerElement" id="rHeaderIcon">
                <img id="lIconImg" alt="Recipeat Icon" src="Recipeat_Green_2-removebg-preview.png">
            </div>
        </header>
        <div id="logoutContainer" class="logoutContainerClass">
            <form action="/logout?_method=DELETE" method="POST">
                <button type="submit" id="logoutButton">Log Out</button>
            </form>
        </div>
        <div id="addRecipeBtnContainer">
            <img alt="Add Recipe Button" src="plus_sign_green.png" id="addRecipeImg">
        </div>
        <section id="allFormContent">
            <header id="recipeFormHeader">
                <div class="headerElement" id="lHeaderIcon">
                    <img id="rIconImg" alt="Recipeat Icon" src="Recipeat_Green_1-removebg-preview.png">
                </div>
                <h1 class="headerElement" id="headerTitle">RECIPEAT</h1>
                <div class="headerElement" id="rHeaderIcon">
                    <img id="lIconImg" alt="Recipeat Icon" src="Recipeat_Green_2-removebg-preview.png">
                </div>
            </header>
            <div id="recipeFormContainer">
                <div id="recipeSubHeader">
                    <div class="subHeaderElement" id="lSubHeaderIcon">
                        <img id="rSubIconImg" alt="Sub Header Icon" src="cutleryIcon.png">
                    </div>
                    <h1 class="subHeaderElement" id="subHeaderTitle">Create a Recipe!</h1>
                    <div class="subHeaderElement" id="rSubHeaderIcon">
                        <img id="lSubIconImg" alt="Sub Header Icon" src="dishIcon.png">
                    </div>
                </div>
                <div>
                    <% recipeSteps.forEach(recipe => { %>
                        <div id="addedRecipeStep">
                            <%= recipe.cookMethod %> for <%= recipe.recipeMinTime %> minutes and <%= recipe.recipeHourTime %> hours
                            <h1>
                                Ingredients
                            </h1>
                            <p>
                                <%= recipe.recipeIngredients %>
                            </p>
                            <h1>
                                Procedure
                            </h1>
                            <p>
                                <%= recipe.recipeProcedure %>
                            </p>
                        </div>
                <% }) %>
                </div>
                <div id="addStepBtnContainer">
                    <h1>Add Recipe</h1>
                    <img alt="Add Recipe Button" src="plus_sign_green.png" id="addStepBtn">
                </div>
                <form id="addStepForm" method="POST" action="/main">
                    <div id="recipeNameBox" class="form-group">
                        <label>Recipe Name</label>
                        <input type="text" id="recipeName" name="recipeName" placeholder="name" required>
                    </div>
                    <div id="recipImageBox" class="form-group">
                        <label>Recipe Image</label>
                        <input class=".from-control-file" type="file" id="recipeImage" name="recipeImage" placeholder="image">
                    </div>
                    <div id="ingredientsBox">
                        <label>Ingredients</label>
                        <textarea class="form-control" id="ingredients" rows="3" placeholder="e.g.) Mushrooms - 3" name="ingredients"></textarea>
                    </div>
                    <div id="recipeInstructionBox" class="form-group">
                        <label>Procedure</label>
                        <textarea class="form-control" type="text" id="recipeProcedure" name="recipeProcedure" placeholder="instructions" required></textarea>
                    </div>
                    <div id="recipeTimeBox" class="form-group">
                        <label for="recipeCookTime">Cook Time</label>
                        <select class="form-control" id="recipeMinTime" name="recipeMinTime">
                            <option value="5">5 min</option>
                            <option value="10">10 min</option>
                            <option value="15">15 min</option>
                            <option value="20">20 min</option>
                            <option value="25">25 min</option>
                            <option value="30">30 min</option>
                            <option value="40">40 min</option>
                            <option value="50">50 min</option>
                        </select>
                        <select class="form-control" id="recipeHourTime" name="recipeHourTime">
                            <option value="0">0 hour</option>
                            <option value="1">1 hour</option>
                            <option value="2">2 hour</option>
                            <option value="3">3 hour</option>
                            <option value="4">4 hour</option>
                            <option value="5">5 hour</option>
                            <option value="6">6 hour</option>
                            <option value="7">7 hour</option>
                            <option value="8">8 hour</option>
                        </select>
                    </div>
                    <div id="doneStepBtnContainer">
                        <button id="doneStepButton" type="submit">Finish</button>
                    </div>
                </form>
                </div>
            </div>
        </section>
    </body>
</html>