        <li></li>
        <li></li>
    </ul>
    <header id="mainHeader">
        <div class="headerElement" id="lHeaderIcon">
            <img id="rIconImg" alt="Recipeat Icon" src="Recipeat Icon 3.png">
        </div>
        <h1 class="headerElement" id="headerTitle">RECIPEAT</h1>
        <div class="headerElement" id="rHeaderIcon">
            <img id="lIconImg" alt="Recipeat Icon" src="Recipeat Icon 2.png">
        </div>
    </header>
    <section id="formContainer">
        <form id="form" action="/register" method="POST">
            <div id="formTextContainer">
                <h1>
                    Create an Account
                </h1>
            </div>
            <div id="nameContainer">
                <!-- <label>
                    Name
                </label> -->
                <input type="text" id="username" name="username" placeholder="Name" required>
            </div>
            <div id="emailContainer">
                <!-- <label>
                    Email
                </label> -->
                <input type="email" id="email" name="email" placeholder="Email" required>
            </div>
            <div>
                <!-- <label>
                    Password
                </label> -->
                <input type="password" id="password" name="password" placeholder="Password" required>
            </div>
            <div id="buttonContainer">
                <button id="signUpButton" type="submit">Register</button>
            </div>
            <div id="signInContainer">
                <p id="signInText">Already have an account?</p>
                <a href="/">Login</a>
            </div>
        </form>
    </section>

    
</body>
</html>
